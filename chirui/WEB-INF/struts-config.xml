<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">
<struts-config>
	<form-beans>
		<form-bean name="applicantForm" type="test.ApplicantForm" />
		<form-bean name="userInfoForm"
			type="crjd.model.admin.system.user.UserInfoForm" />
		<form-bean name="departmentForm"
			type="crjd.model.admin.system.department.DepartmentForm" />
		<form-bean name="systemLogForm"
			type="crjd.model.admin.system.systemlog.SystemLogForm" />
		<form-bean name="loginForm"
			type="crjd.model.admin.system.login.LoginForm" />
		<form-bean name="gridmodalForm"
			type="crjd.model.admin.system.stencil.report.GridmodalForm" />
		<form-bean name="roleInfoForm"
			type="crjd.model.admin.system.role.RoleInfoForm" />
		<form-bean name="menuForm"
			type="crjd.model.admin.system.menu.MenuForm" />
		<form-bean name="menuPopeForm"
			type="crjd.model.admin.system.menupop.MenuPopeForm" />
	</form-beans>

	<global-forwards>
		<forward name="error" path="/common/error.jsp" />
		<forward name="adminLogin" path="/admin/login.jsp" />
	</global-forwards>

	<action-mappings>
		<!-- 用户管理  eqzhou 2008.12.18 start-->
		<action input="/admin/system/user/userApply.jsp"
			name="userInfoForm" path="/userInfoAction" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy"
			validate="false">
			<forward name="success"
				path="/admin/system/user/userShow.jsp" />
			<forward name="addsuccess"
				path="/userInfoAction.do?actionType=0" />
			<forward name="detail"
				path="/admin/system/user/userLook.jsp" />
			<forward name="preUPdate"
				path="/admin/system/user/userModify.jsp" />
			<forward name="updatesuccess"
				path="/userInfoAction.do?actionType=0" />
			<forward name="delsuccess"
				path="/userInfoAction.do?actionType=0" />
			<forward name="searchSuccess"
				path="/admin/system/user/userShow.jsp" />
		</action>
		<!-- 用户管理  eqzhou 2008.12.18 end-->

		<action name="departmentForm" path="/departmentAction"
			scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy"
			validate="false">
			<forward name="success"
				path="/admin/system/department/show.jsp" />
			<forward name="addsuccess"
				path="/departmentAction.do?actionType=0" />
			<forward name="detail"
				path="/admin/system/department/look.jsp" />
			<forward name="preUPdate"
				path="/admin/system/department/modify.jsp" />
			<forward name="updatesuccess"
				path="/departmentAction.do?actionType=0" />
			<forward name="delsuccess"
				path="/departmentAction.do?actionType=0" />
			<forward name="searchSuccess"
				path="/admin/system/department/show.jsp" />
		</action>

		<action name="systemLogForm" path="/systemLogAction"
			scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy"
			validate="false">
			<forward name="success"
				path="/admin/system/systemlog/show.jsp" />
			<forward name="delsuccess"
				path="/systemLogAction.do?actionType=0" />
			<forward name="searchSuccess"
				path="/admin/system/systemlog/show.jsp" />
		</action>

		<action input="/admin/login.jsp" name="loginForm"
			path="/loginAction" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy"
			validate="false">
			<forward name="faild" path="/admin/login.jsp" />
			<forward name="success" path="/default.jsp" />
		</action>

		<action name="roleInfoForm" path="/roleInfoAction"
			scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy"
			validate="false">
			<forward name="success" path="/admin/system/role/show.jsp" />
			<forward name="addsuccess"
				path="/roleInfoAction.do?actionType=0" />
			<forward name="detail" path="/admin/system/role/look.jsp" />
			<forward name="preUPdate"
				path="/admin/system/role/modify.jsp" />
			<forward name="updatesuccess"
				path="/roleInfoAction.do?actionType=0" />
			<forward name="delsuccess"
				path="/roleInfoAction.do?actionType=0" />
			<forward name="searchSuccess"
				path="/admin/system/role/show.jsp" />
		</action>

		<action name="menuForm" path="/menuAction" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy"
			validate="false">
			<forward name="success"
				path="/admin/system/menu/show.jsp?menuid=4" />
			<forward name="addsuccess"
				path="/menuAction.do?actionType=0" />
			<forward name="detail" path="/admin/system/menu/look.jsp" />
			<forward name="preUPdate"
				path="/admin/system/menu/modify.jsp" />
			<forward name="updatesuccess"
				path="/menuAction.do?actionType=0" />
			<forward name="delsuccess"
				path="/menuAction.do?actionType=0" />
			<forward name="searchSuccess"
				path="/admin/system/menu/show.jsp?menuid=4" />
		</action>

		<action path="/menuListAction" scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy"
			validate="false">
			<forward name="toMenu" path="/frame/menu.jsp" />
		</action>

		<action path="/roleMenuAction"
			type="org.springframework.web.struts.DelegatingActionProxy"
			validate="false">
			<forward name="toMenuRole"
				path="/admin/system/role/rolemenu.jsp" />
			<forward name="toRole"
				path="/roleInfoAction.do?actionType=0" />
		</action>

		<action name="menuPopeForm" path="/menuPopeAction"
			scope="request"
			type="org.springframework.web.struts.DelegatingActionProxy"
			validate="false">
			<forward name="success"
				path="/admin/system/menupope/show.jsp" />
			<forward name="addsuccess"
				path="/menuPopeAction.do?actionType=0" />
			<forward name="preUPdate"
				path="/admin/system/menupope/modify.jsp" />
			<forward name="updatesuccess"
				path="/menuPopeAction.do?actionType=0" />
			<forward name="delsuccess"
				path="/menuPopeAction.do?actionType=0" />
			<forward name="searchSuccess"
				path="/admin/system/menupope/show.jsp" />
		</action>

		<action path="/userRoleAction"
			type="org.springframework.web.struts.DelegatingActionProxy"
			validate="false">
			<forward name="toUserRole"
				path="/admin/system/user/userrole.jsp" />
			<forward name="toUser"
				path="/userInfoAction.do?actionType=0" />
		</action>

		<action path="/logoutAction" scope="request"
			type="crjd.model.admin.system.login.LogoutAction">
			<forward name="success" path="/admin/login.jsp" />
		</action>

		<!-- changePwdAction -->
		<action path="/changePwdAction" scope="request"
			type="crjd.model.admin.system.changepwd.ChangePwdAction">
			<forward name="display"
				path="/admin/system/changepwd/changepwd.jsp" />
		</action>
	</action-mappings>

	<plug-in
		className="org.springframework.web.struts.ContextLoaderPlugIn">
		<set-property property="contextConfigLocation"
			value="/WEB-INF/applicationContext.xml" />
	</plug-in>
</struts-config>
