<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping>
<!--
    Created by the Middlegen Hibernate plugin 2.1

    http://boss.bekk.no/boss/middlegen/
    http://www.hibernate.org/
-->

<class
    name="crjd.model.admin.system.user.UserInfo"
    table="TB_M_USERINFO"
>

   <id
        name="userRowId"
        type="java.lang.Integer"
        column="USER_ROW_ID"
    >
        <generator class="increment" />
    </id>

    <property
        name="userId"
        type="java.lang.String"
        column="USER_ID"
        length="32"
    />
    <property
        name="userName"
        type="java.lang.String"
        column="USER_NAME"
        length="20"
    />
    <!--property
        name="userDepId"
        type="java.lang.String"
        column="USER_DEP_ID"
        length="8"
    /-->
    <property
        name="userPassword"
        type="java.lang.String"
        column="USER_PASSWORD"
        length="32"
    />
    <property
        name="userEmail"
        type="java.lang.String"
        column="USER_EMAIL"
        length="50"
    />
    <property
        name="userRegDate"
        type="java.sql.Date"
        column="USER_REG_DATE"
        length="30"
        update="false"
    />
    <property
        name="userState"
        type="java.lang.String"
        column="USER_STATE"
        length="5"
    />
    <property
        name="userRemark"
        type="java.lang.String"
        column="USER_REMARK"
        length="1000"
    />
    <property
        name="userCol1"
        type="java.lang.String"
        column="USER_COL1"
        length="50"
    />
    <property
        name="userCol2"
        type="java.lang.String"
        column="USER_COL2"
        length="50"
    />
    <property
        name="userLuser"
        type="java.lang.String"
        column="USER_LUSER"
        length="20"
    />
    <!--property
        name="userLdate"
        type="java.sql.Timestamp"
        column="USER_LDATE"
        length="7"
    /-->

    <!-- Associations -->

    <many-to-one name="department"
                 class="crjd.model.admin.system.department.Department"
                 cascade="none"
                 column="USER_DEP_ID"
                 insert="true"
                 update="true"
                 fetch="join">
    </many-to-one>


    <set name="userRoleList"
         cascade="all"
         inverse="true"
         lazy="false"
    >
         <key column="USER_ID"/>
         <one-to-many class="crjd.model.admin.system.userrole.UserRole"/>
    </set>

</class>
</hibernate-mapping>
